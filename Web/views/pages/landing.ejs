<!DOCTYPE html>
<html>
<head>
	<title>GAwesomeBot: the best Discord bot!</title>
	<% include ../partials/head %>

	<style type="text/css">
	@media screen and (max-width: 420px) {
		#gawesomebot-title {
			font-size: 42px;
		}
	}
	@media screen and (min-width: 321px) and (max-width: 768px) {
		#gawesomebot-title {
			font-size: 46px;
		}
		#gawesomebot-subtitle {
			font-size: 30px;
		}
		#gawesomebot-discord {
			height: 31px;
		}
	}
	@media screen and (min-width: 769px) {
		#gawesomebot-title {
			font-size: 96px;
		}
		#gawesomebot-subtitle {
			font-size: 40px;
		}
		#gawesomebot-discord {
			height: 42px;
		}
	}
	</style>
	<script>
	$(document).ready(function() {
		$(".section-shortcut-link").click(function() {
			$("html, body").animate({
				scrollTop: $("#" + this.href.substring(this.href.lastIndexOf("#")+1)).offset().top
			}, 172);
		});
	});
	</script>
</head>
<body>
	<section id="header" class="hero is-primary is-fullheight is-bold" style="background: url('/header-image');background-size: cover;">
		<div class="hero-head">
			<% include ../partials/header %>
		</div>
		<div class="hero-body">
			<div class="container has-text-centered">
				<img src="/static/img/icon.png" style="border-radius: 100%;width:200px;">
				<h1 id="gawesomebot-title" class="title is-1" style="font-family: Montserrat;">
					<span style="display: inline-block;">GAwesomeBot</span>
				</h1>
				<h2 id="gawesomebot-subtitle" class="title is-2">
					The best <img id="gawesomebot-discord" src="/static/img/discord-logo.png" style="vertical-align: top;"> bot!
				</h2>
				<br>

				<p class="hero-buttons">
					<a class="button is-primary is-large" href="/add">
						<span class="icon">
							<i class="fa fa-plus"></i>
						</span>
						<span>Add to Server</span>
					</a>
				</p>
				<br>

				<% if(bannerMessage) { %>
					<br><br>
					<h3 class="subtitle is-3"><%- bannerMessage %></h3>
				<% } %>
			</div>
		</div>
		<div class="hero-foot">
			<nav class="tabs is-boxed is-fullwidth">
				<div class="container">
					<ul>
						<li>
						<a class="is-tab section-shortcut-link" href="#about">
							About
						</a>
						</li>
						<li>
						<a class="nav-item is-tab section-shortcut-link" href="#media">
							Media
						</a>
						</li>
						<li>
						<a class="nav-item is-tab section-shortcut-link" href="#stats">
							Stats
						</a>
						</li>
						<li>
						<a class="nav-item is-tab section-shortcut-link" href="#features">
							Features
						</a>
						</li>
						<li>
						<a class="nav-item is-tab section-shortcut-link" href="#customizability">
							Customizability
						</a>
						</li>
						<li>
						<a class="nav-item is-tab section-shortcut-link" href="#servers">
							Servers
						</a>
						</li>
						<li>
						<a class="nav-item is-tab section-shortcut-link" href="#team">
							Team
						</a>
						</li>
						<li>
						<a class="nav-item is-tab section-shortcut-link" href="#links">
							More
						</a>
						</li>
					</ul>
				</div>
			</nav>
		</div>
	</section>

	<section id="about" class="hero is-light">
